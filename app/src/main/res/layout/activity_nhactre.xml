<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NhactreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="back"
            android:textSize="20dp"
            android:text="Back"
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#DD3300"
            android:textSize="30dp"
            android:text="Nhạc Trẻ Mới"
            android:layout_marginLeft="65dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:id="@+id/edt_Book_Search"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/dialogbuttoncustom"
            android:ems="10"
            android:hint="Bộ lọc"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:onClick="play1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgbaihat"
            android:layout_marginLeft="30dp"
            android:src="@drawable/simplelove"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvtenbaihat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Simple Love"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvtencasi"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:text="Obito"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvthoigian"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:text="3:34"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgbacham"
            android:layout_marginLeft="20dp"
            android:src="@drawable/bacham"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>