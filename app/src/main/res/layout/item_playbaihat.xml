<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/tvplayindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Ten ca khuc"
            android:layout_toRightOf="@+id/tvdanhsachindex"
            android:singleLine="true"
            android:id="@+id/tvplaytenbaihat"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Ten ca si"
            android:id="@+id/tvplaycasi"
            android:layout_toRightOf="@+id/tvdanhsachindex"
            android:layout_below="@+id/tvtenbaihat"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>