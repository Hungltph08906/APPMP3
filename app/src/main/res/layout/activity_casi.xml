<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Casi">


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:layout_marginLeft="20dp"
            android:paddingLeft="8dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:id="@+id/edt_Book_Search"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/dialogbuttoncustom"
            android:ems="10"
            android:hint="Tìm Kiếm"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:textColor="#DD3300"
        android:textSize="30dp"
        android:text="Ca Sĩ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="200dp">

            <ImageView
                android:src="@drawable/tdq1"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:textSize="17dp"
                android:text="Trịnh Đình Quang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="190dp">

            <ImageView
                android:src="@drawable/lbb"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:text="Lê Bảo Bình"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="200dp">

            <ImageView
                android:src="@drawable/chidan"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:textSize="17dp"
                android:text="Chi Dân"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="190dp">

            <ImageView
                android:src="@drawable/soainhi"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:text="Soái Nhi"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:onClick="trangcanhan"
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:onClick="nhacmoi"
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/music"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>

        <ImageView
            android:src="@drawable/play"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:background="#FF9966"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/singer"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/top"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>