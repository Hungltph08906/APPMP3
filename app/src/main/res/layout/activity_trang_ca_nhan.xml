<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrangCaNhan">

    <TextView
        android:text="Trang Cá Nhân "
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#DD3300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
    android:layout_marginTop="40dp"
    android:textColor="#DD3300"
    android:textSize="30dp"
    android:text="Thư viện"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:onClick="baihat"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#DD3300"
        android:textSize="20dp"
        android:text="Bài hát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:onClick="playlist"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#DD3300"
        android:textSize="20dp"
        android:text="Playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:onClick="album"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#DD3300"
        android:textSize="20dp"
        android:text="Album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:onClick="mymv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#DD3300"
        android:textSize="20dp"
        android:text="My MV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#DD3300"
        android:textSize="30dp"
        android:text="Playlist gần đây"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/tdq"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Trịnh Đình Quang"
            android:textColor="#DD3300"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/tdq"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Lê Bảo Bình"
            android:textColor="#DD3300"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:background="#FF9966"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:onClick="nhacmoi"
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/music"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>

        <ImageView
            android:src="@drawable/play"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <LinearLayout
            android:onClick="casi"
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/singer"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:onClick="mv"
            android:layout_marginTop="55dp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="70dp">

            <ImageView
                android:src="@drawable/mv"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>